<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 
	                    http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>dsi_java</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<!-- readme -->
        <fileSet>
            <directory>src/main</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
		<!-- conf -->
		<fileSet>
			<directory>src/main/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<includes>
			    <include>*.xml</include>
				<include>*.properties</include>
				<include>*.csv</include>
				<include>cachedChannel.txt</include>
			</includes>
		</fileSet>
		<!-- bin -->
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>*.sh</include>
				<include>*.py</include>
			</includes>
		</fileSet>
		<!-- test/dispatch -->
		<fileSet>
			<directory>src/main/test/dispatch</directory>
			<outputDirectory>test/dispatch</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>*.py</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/test/dispatch</directory>
			<outputDirectory>test/dispatch</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>*.properties</include>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<!-- test/server -->
		<fileSet>
			<directory>src/main/test/server</directory>
			<outputDirectory>test/server</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>*.py</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/test/server/xml</directory>
			<outputDirectory>test/server/xml</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
		<!-- test/simulator -->
		<fileSet>
			<directory>src/main/test/simulator</directory>
			<outputDirectory>test/simulator</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>*.py</include>
			</includes>
		</fileSet>
		<!-- tool -->
		<fileSet>
			<directory>src/main/tool</directory>
			<outputDirectory>tool</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>*.py</include>
			</includes>
		</fileSet>
		<!-- too/pullContent -->
		<fileSet>
            <directory>src/main/tool/pullContent</directory>
            <outputDirectory>tool/pullContent</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.txt</include>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/tool/pullContent</directory>
            <outputDirectory>tool/pullContent</outputDirectory>
            <fileMode>0744</fileMode>
            <includes>
                <include>*.py</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/tool/pullContent/package</directory>
            <outputDirectory>tool/pullContent/package</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.zip</include>
            </includes>
        </fileSet>
        <!-- too/manageContent -->
        <fileSet>
            <directory>src/main/tool/manageContent</directory>
            <outputDirectory>tool/manageContent</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.txt</include>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/tool/manageContent</directory>
            <outputDirectory>tool/manageContent</outputDirectory>
            <fileMode>0744</fileMode>
            <includes>
                <include>*.py</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!-- db/install -->
        <fileSet>
            <directory>src/main/db/install</directory>
            <outputDirectory>db/install</outputDirectory>
            <fileMode>0744</fileMode>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/db/install</directory>
            <outputDirectory>db/install</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
        <!-- lib -->
		<fileSet>
			<directory>${project.build.directory}/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<baseDirectory>${project.artifactId}</baseDirectory>
</assembly>